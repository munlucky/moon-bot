{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ENABLE_TOOL_SEARCH": "1",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "55555"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "WebFetch(domain:exhibition-admin-api-docs)",
      "Bash(cat:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npx tsc:*)",
      "Bash(npm run lint:*)",
      "Bash(mkdir:*)",
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Skill(codex-claude-loop)",
      "mcp__codex__spawn_agent",
      "Skill(claude-codex-guardrail-loop)",
      "Bash(awk:*)",
      "Bash(xargs:*)",
      "Bash(find:*)",
      "Bash(git log:*)",
      "Bash(npm run:*)",
      "Bash(jq:*)",
      "Bash(python3:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(codex -m gpt-5.2-codex mcp-server:*)",
      "Bash(codex --version:*)",
      "Bash(ls:*)",
      "Bash(codex login status:*)",
      "Bash(codex --help:*)",
      "Bash(codex exec:*)",
      "Bash(claude --version:*)",
      "mcp__codex__codex",
      "Bash(git commit:*)",
      "Bash(npm install:*)",
      "Bash(npx playwright install chromium)",
      "Bash(npx playwright test:*)",
      "Bash(lsof:*)",
      "Bash(git show:*)",
      "Bash(claude plugin:*)",
      "WebSearch",
      "Bash(claude mcp list:*)",
      "Bash(npx:*)",
      "mcp__memory__create_entities",
      "Skill(commit)",
      "Skill(commit:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \".claude/scripts/check-mcp.sh\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST -H 'Content-Type: text/plain; charset=utf-8' -d \"$(basename \"$CLAUDE_PROJECT_DIR\") 입력 필요\" https://ntfy.sh/moonshot-claude-alert"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "tool == \"Edit\" && tool_input.file_path matches \"\\\\.(ts|tsx)$\"",
        "hooks": [
          {
            "type": "command",
            "command": "#!/bin/bash\ninput=$(cat)\nfile_path=$(echo \"$input\" | jq -r '.tool_input.file_path // \"\"')\n\nif [ -n \"$file_path\" ] && [ -f \"$file_path\" ]; then\n  dir=$(dirname \"$file_path\")\n  project_root=\"$dir\"\n  while [ \"$project_root\" != \"/\" ] && [ ! -f \"$project_root/package.json\" ]; do\n    project_root=$(dirname \"$project_root\")\n  done\n  \n  if [ -f \"$project_root/tsconfig.json\" ]; then\n    cd \"$project_root\" && npx tsc --noEmit --pretty false 2>&1 | grep \"$file_path\" | head -10 >&2 || true\n  fi\nfi\n\necho \"$input\""
          }
        ]
      }
    ]
  },
  "gitAttribution": false
}

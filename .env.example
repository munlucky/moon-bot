# Moon-Bot Environment Variables
# Copy this file to .env and fill in your values

# ======================
# LLM Configuration
# ======================

# LLM Provider: "openai" or "glm"
# If not set, auto-detects based on available API keys
LLM_PROVIDER=glm

# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Z.AI (智谱AI) Configuration
# Primary environment variables (preferred)
ZAI_API_KEY=your-zai-api-key

# Model selection:
# - Default (free): glm-4.7-flash (no balance required)
# - Coding API mode: glm-4.7 (requires ZAI_USE_CODING_API=true)
# ZAI_MODEL is set automatically based on ZAI_USE_CODING_API setting

# Use Z.AI Coding API endpoint (for code-related tasks)
# When enabled, uses glm-4.7 model with coding endpoint
ZAI_USE_CODING_API=false
# ZAI_CODING_BASE_URL=https://api.z.ai/api/coding/paas/v4/

# Standard API endpoint (used when ZAI_USE_CODING_API=false)
ZAI_BASE_URL=https://api.z.ai/api/paas/v4/

# Legacy environment variables (still supported for backward compatibility)
# GLM_API_KEY=your-glm-api-key
# GLM_MODEL=glm-4-flash
# GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

# Optional: Override default LLM parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ======================
# Gateway Configuration
# ======================

# Gateway server host and port
MOONBOT_GATEWAY_HOST=127.0.0.1
MOONBOT_GATEWAY_PORT=18789

# ======================
# Channel Configuration
# ======================

# Discord Bot Token
MOONBOT_DISCORD_TOKEN=your-discord-bot-token

# ======================
# Configuration Path
# ======================

# Custom config file path (optional)
# MOONBOT_CONFIG=/path/to/config.json
